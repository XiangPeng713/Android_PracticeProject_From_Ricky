<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xiangpeng.com.practiceproj_ricky.Activity.Activity.MainActivity"
    android:orientation="vertical"
    android:background="#999"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/activity_main_header_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#000"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/dice_game_project"
            android:textColor="#FFF"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_main_info_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="#333"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_main_info_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/please_roll_to_start_a_game"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:maxLines="2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_main_top_main_game_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="#297"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_main_bottom_control_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="#734"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>
